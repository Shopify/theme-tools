{
  "_comment": "basic configuration for JavaScript projects with type checking",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "checkJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@theme-graph/*": ["../src"]
    },
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "files": ["./theme-graph"]
}
