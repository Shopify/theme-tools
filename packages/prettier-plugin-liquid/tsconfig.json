{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "lib": ["es2020"],
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES6",
    "rootDir": "src",
    "esModuleInterop": true,
    "paths": {
      "@shopify/liquid-html-parser": ["../liquid-html-parser/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../liquid-html-parser" }
  ]
}
